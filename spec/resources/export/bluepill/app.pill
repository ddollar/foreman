    process.monitor_children do |children|
      children.stop_command "kill {{PID}}"
    end

    process.group = "app-foo_bar"
  end

  app.process("foo-bar-1") do |process|
    process.start_command = %Q{./foo-bar}

    process.working_dir = "/tmp/app"
