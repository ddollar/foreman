<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type="manifest" name="<%=name %>">
  <service name="<%=app %>/<%=name %>" type="service" version="1">

    <create_default_instance enabled="true"/>

    <single_instance/>

    <dependency name="network" grouping="require_all" restart_on="refresh" type="service">
      <service_fmri value="svc:/milestone/network:default"/>
    </dependency>

    <dependency name="filesystem" grouping="require_all" restart_on="refresh" type="service">
      <service_fmri value="svc:/system/filesystem/local"/>
    </dependency>

    <method_context working_directory="<%= engine.root %>">
      <method_credential user="<%=user %>" group="<%=user %>" privileges="basic,net_privaddr"/>
      <method_environment>
        <%- engine.env.merge("PORT" => port).each_pair do |var,env| -%>
            <envvar name="<%= var.upcase %>" value="<%= env %>" />
        <%- end -%>
        <envvar name="PATH" value="/opt/local/bin:/usr/bin:/bin" />
      </method_environment>
    </method_context>

    <exec_method
      type="method"
      name="start"
      exec="<%= process.command %>"
      timeout_seconds="60"/>

    <exec_method
      type="method"
      name="stop"
      exec=":kill"
      timeout_seconds="60"/>

    <property_group name="startd" type="framework">
      <propval name="duration" type="astring" value="child"/>
      <propval name="ignore_error" type="astring" value="core,signal"/>
    </property_group>

    <property_group name="application" type="application">

    </property_group>


    <stability value="Evolving"/>

    <template>
      <common_name>
        <loctext xml:lang="C"><%= app %></loctext>
      </common_name>
    </template>

  </service>

</service_bundle>