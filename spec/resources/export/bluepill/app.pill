    process.working_dir = "/tmp/app"
    process.daemonize = true
    process.environment = {"INSTANCE_NAME"=>"5200", "PS"=>"foo_bar.1", "PORT"=>"5200"}
    process.stop_signals = [:quit, 30.seconds, :term, 5.seconds, :kill]
